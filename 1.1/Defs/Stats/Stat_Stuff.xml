<Defs>
    <!-- Sharpness -->
    <StatDef>
        <defName>ST_Sharpness</defName>
        <label>sharpness</label>
        <description>Determines how sharp tools are amplified when built from this.</description>
        <category>StuffStatFactors</category>
        <displayPriorityInCategory>100</displayPriorityInCategory>
        <defaultBaseValue>1</defaultBaseValue>
        <minValue>0</minValue>
        <showIfUndefined>false</showIfUndefined>
    </StatDef>
    
    <!-- Hardness -->
    <StatDef>
        <defName>ST_Hardness</defName>
        <label>hardness</label>
        <description>Determines how blunt tools are amplified when built from this.</description>
        <category>StuffStatFactors</category>
        <displayPriorityInCategory>100</displayPriorityInCategory>
        <defaultBaseValue>1</defaultBaseValue>
        <minValue>0</minValue>
        <showIfUndefined>false</showIfUndefined>
    </StatDef>

    <StatDef>
        <defName>ToolWearModifier</defName>
        <label>tool wear modifier</label>
        <description>Modifies the speed at which the tool decays.</description>
        <category>StuffStatFactors</category>
        <showIfUndefined>false</showIfUndefined>
        <displayPriorityInCategory>30</displayPriorityInCategory>
        <defaultBaseValue>1</defaultBaseValue>
        <minValue>0.5</minValue>
        <toStringStyle>PercentZero</toStringStyle>
    </StatDef>
</Defs>
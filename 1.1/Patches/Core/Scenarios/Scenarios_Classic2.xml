<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Weapons Expanded</li>
        </mods>
        <match Class="PatchOperationSequence">
            <!--success>Always</success-->
            <operations>
                <li Class="PatchOperationConditional">
                    <xpath>/Defs/ThingDef[defName="VWE_MeleeWeapon_Pickaxe"]</xpath>
                    <match Class="PatchOperationReplace">
                        <xpath>Defs/ScenarioDef[defName="Crashlanded"]/scenario/parts/li/thingDef[text()="SurvivalTools_Pickaxe"]</xpath>
                        <value>
                            <thingDef>VWE_MeleeWeapon_Pickaxe</thingDef>
                        </value>
                    </match>
                </li>
                <li Class="PatchOperationConditional">
                    <xpath>/Defs/ThingDef[defName="VWE_MeleeWeapon_Hammer"]</xpath>
                    <match Class="PatchOperationReplace">
                        <xpath>Defs/ScenarioDef[defName="Crashlanded"]/scenario/parts/li/thingDef[text()="SurvivalTools_Hammer"]</xpath>
                        <value>
                            <thingDef>VWE_MeleeWeapon_Hammer</thingDef>
                        </value>
                    </match>
                </li>
                <li Class="PatchOperationConditional">
                    <xpath>/Defs/ThingDef[defName="VWE_MeleeWeapon_Axe"]</xpath>
                    <match Class="PatchOperationReplace">
                        <xpath>Defs/ScenarioDef[defName="LostTribe"]/scenario/parts/li/thingDef[text()="SurvivalTools_Primitive_Axe"]</xpath>
                        <value>
                            <thingDef>VWE_MeleeWeapon_Axe</thingDef>
                        </value>
                    </match>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Alpha Animals</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>

                <!-- Red Wood -->
                <li Class="PatchOperationAddModExtension">
                    <xpath>Defs/ThingDef[defName="GU_RedWood"]</xpath>
                    <value>
                        <li Class="SurvivalTools.StuffPropsTool">
                            <toolStatFactors>
                                <PlantWorkSpeed_Felling_Tool>0.7</PlantWorkSpeed_Felling_Tool>
                                <PlantWorkSpeed_Harvesting_Tool>0.7</PlantWorkSpeed_Harvesting_Tool>
                                <MiningSpeed_Tool>0.55</MiningSpeed_Tool>
                                <MiningYield_Tool>0.8</MiningYield_Tool>
                                <ConstructionSpeed_Tool>0.55</ConstructionSpeed_Tool>
                            </toolStatFactors>
                        </li>
                    </value>
                </li>

                <!-- Sky Steel -->
                <li Class="PatchOperationAddModExtension">
                    <xpath>Defs/ThingDef[defName="AA_SkySteel"]</xpath>
                    <value>
                        <li Class="SurvivalTools.StuffPropsTool">
                            <toolStatFactors>
                                <PlantWorkSpeed_Felling_Tool>1.1</PlantWorkSpeed_Felling_Tool>
                                <PlantWorkSpeed_Harvesting_Tool>1.1</PlantWorkSpeed_Harvesting_Tool>
                                <MiningSpeed_Tool>1.1</MiningSpeed_Tool>
                                <ConstructionSpeed_Tool>1.1</ConstructionSpeed_Tool>
                            </toolStatFactors>
                        </li>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>

</Patch>
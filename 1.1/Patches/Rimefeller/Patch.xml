<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Rimefeller</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAddModExtension">
                    <xpath>Defs/ThingDef[@Name="SynthyleneBase"]</xpath>
                    <value>
                        <li Class="SurvivalTools.StuffPropsTool">
                            <toolStatFactors>
                                <PlantWorkSpeed_Felling_Tool>0.6</PlantWorkSpeed_Felling_Tool>
                                <PlantWorkSpeed_Harvesting_Tool>0.6</PlantWorkSpeed_Harvesting_Tool>
                                <MiningSpeed_Tool>0.9</MiningSpeed_Tool>
                                <MiningYield_Tool>0.9</MiningYield_Tool>
                                <ConstructionSpeed_Tool>0.9</ConstructionSpeed_Tool>
                            </toolStatFactors>
                        </li>
                    </value>
                </li>
                <li Class="PatchOperationAddModExtension">
                    <xpath>Defs/ThingDef[@Name="FiberCompositeBase"]</xpath>
                    <value>
                        <li Class="SurvivalTools.StuffPropsTool">
                            <toolStatFactors>
                                <PlantWorkSpeed_Felling_Tool>1.2</PlantWorkSpeed_Felling_Tool>
                                <PlantWorkSpeed_Harvesting_Tool>1.2</PlantWorkSpeed_Harvesting_Tool>
                                <MiningYield_Tool>0.9</MiningYield_Tool>
                            </toolStatFactors>
                        </li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

</Patch>
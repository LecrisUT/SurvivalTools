                    <nomatch Class="PatchOperationAddModExtension">
                        <xpath>Defs/ThingDef[defName="Titanium"]</xpath>
                        <value>
                            <li Class="SurvivalTools.StuffPropsTool">
                                <toolStatFactors>
                                    <PlantWorkSpeed_Felling_Tool>2.0</PlantWorkSpeed_Felling_Tool>
